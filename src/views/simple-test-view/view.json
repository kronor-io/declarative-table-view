{
    "title": "Simple Test View",
    "uniqueName": "simple-test-view",
    "collectionName": "simpleTestDataCollection",
    "paginationKey": "id",
    "boolExpType": "SimpleTestBoolExp",
    "orderByType": "[SimpleTestOrderBy!]",
    "columns": [
        {
            "data": [
                {
                    "type": "field",
                    "path": "testField"
                }
            ],
            "name": "Test Column Header",
            "cellRenderer": {
                "section": "cellRenderers",
                "key": "text"
            }
        },
        {
            "data": [
                {
                    "type": "field",
                    "path": "amount"
                }
            ],
            "name": "Amount",
            "cellRenderer": {
                "section": "cellRenderers",
                "key": "amountCellRenderer"
            }
        },
        {
            "data": [
                {
                    "type": "field",
                    "path": "email"
                }
            ],
            "name": "Email",
            "cellRenderer": {
                "section": "cellRenderers",
                "key": "emailCellRenderer"
            }
        },
        {
            "data": [
                {
                    "type": "field",
                    "path": "phone"
                }
            ],
            "name": "Phone",
            "cellRenderer": {
                "section": "cellRenderers",
                "key": "text"
            }
        }
    ],
    "filterSchema": {
        "groups": [
            {
                "name": "default",
                "label": "Default Filters"
            },
            {
                "name": "extra",
                "label": "Extra Filters"
            }
        ],
        "filters": [
            {
                "label": "Amount",
                "expression": {
                    "type": "greaterThanOrEqual",
                    "field": "amount",
                    "value": {
                        "type": "number"
                    },
                    "transform": {
                        "section": "queryTransforms",
                        "key": "amountOffset"
                    }
                },
                "group": "default",
                "aiGenerated": false
            },
            {
                "label": "Test Field",
                "expression": {
                    "type": "equals",
                    "field": "testField",
                    "value": {
                        "type": "text"
                    }
                },
                "group": "extra",
                "aiGenerated": false
            },
            {
                "label": "Email",
                "expression": {
                    "type": "equals",
                    "field": "email",
                    "value": {
                        "type": "text"
                    }
                },
                "group": "default",
                "aiGenerated": false
            },
            {
                "label": "Phone",
                "expression": {
                    "type": "equals",
                    "field": "phone",
                    "value": {
                        "type": "custom",
                        "component": {
                            "section": "customFilterComponents",
                            "key": "PhoneNumberFilter"
                        }
                    }
                },
                "group": "extra",
                "aiGenerated": false
            },
            {
                "label": "Test Field (Key-Value Transform)",
                "expression": {
                    "type": "equals",
                    "field": "testField",
                    "value": {
                        "type": "text"
                    },
                    "transform": {
                        "section": "queryTransforms",
                        "key": "keyValueTransform"
                    }
                },
                "group": "extra",
                "aiGenerated": false
            },
            {
                "label": "Search Multiple Fields (OR)",
                "expression": {
                    "type": "iLike",
                    "field": {
                        "or": [
                            "testField",
                            "email"
                        ]
                    },
                    "value": {
                        "type": "text",
                        "placeholder": "Search in test field or email..."
                    }
                },
                "group": "default",
                "aiGenerated": false
            },
            {
                "label": "Match Multiple Fields (AND)",
                "expression": {
                    "type": "equals",
                    "field": {
                        "and": [
                            "testField",
                            "email"
                        ]
                    },
                    "value": {
                        "type": "text",
                        "placeholder": "Value that must match both fields..."
                    }
                },
                "group": "extra",
                "aiGenerated": false
            }
        ]
    }
}
